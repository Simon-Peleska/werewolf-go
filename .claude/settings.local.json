{
  "permissions": {
    "allow": [
      "Bash(go build:*)",
      "Bash(./agent_tools/run_server.sh:*)",
      "Bash(./agent_tools/run_tests.sh:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "go fmt ./..."
          }
        ]
      }
    ]
  }
}
